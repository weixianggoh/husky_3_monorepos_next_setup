        "code-check": "npm run format && npm run lint --fix && git add .",
        "precommit": "npm run code-check"
    },
    "dependencies": {
        "next": "14.2.5",
        "react": "^18",
        "react-dom": "^18"
    },
    "devDependencies": {
        "@commitlint/cli": "17.2.0",
        "@commitlint/config-conventional": "17.2.0",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "commitlint": "17.2.0",
        "eslint": "^8",
        "eslint-config-next": "14.2.5",
        "husky": "8.0.1",
        "lint-staged": "^15.2.7",
        "postcss": "^8",
        "prettier": "2.7.1",
        "tailwindcss": "^3.4.1",
        "typescript": "^5"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "npm run format:check"
        ]
    }
}
